@model List<MOD_ADVEntity>
@{
    var listItem = Model;
    string Title = ViewData["Title"] as string;
}

<hr class="mobile-line" />

<div class="dok-widget dok-widget-banner p-0">
    @for (int i = 0; listItem != null && i < listItem.Count; i++)
    {
        <a class="@(i > 0 ? "mt-2" : "" )" href="@(!string.IsNullOrEmpty(listItem[i].URL) ? listItem[i].URL : "javascript:;")" title="@listItem[i].Name" target="@listItem[i].Target" rel="nofollow">
            <img class="img-fluid" src="@await ImageHelper.ResizeToWebpAsync(Model[i].File)" alt="@listItem[i].Name">
        </a>
    }
</div>
